/* custom-tab-bar/index.wxss */
.tabbar {
    width: 100%;
    height: 65px;
    position: fixed;
    margin: auto;
    bottom: 20px;
    left: 0;
    background: #ffffff;
    display: flex;
    justify-content: center;
    box-sizing: border-box;
    padding: 0 20px;
    border-radius: 60rpx;
    box-shadow: 0px 0px 20px -10px #888;
}


.tabbar .item {
    flex: 1;
    color: #000000;
    height: 50px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 10;

}

.tabbar .item .text {
    position: absolute;
    width: 100%;
    bottom: -5px;
    text-align: center;
    font-size: 11px;
    opacity: 0;
    /* transition: all .3s; */
    transform: scale(0.8);
    width: 100%;
}

.tabbar .item.active .text {
    opacity: 1;
    transform: scale(1);
}


.icon {
    width: 40px;
    height: 40px;
    margin-bottom: 2px;
}