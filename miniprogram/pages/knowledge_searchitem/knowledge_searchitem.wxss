.bottomitem_text {
    padding: 15rpx;
    font-size: small;
    color: rgb(113, 117, 117);
}

.title {
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 30rpx;
    border-radius: 15px;
    border-width: 5px;
    background-color: #ffffff;
    height: 100rpx;
    box-shadow: 0px 0px 20px -10px #888;
    border-left-style: solid;
    border-right-style: solid;
    border-color: #3863bc;
    text-align: center;
    padding: 10rpx;
    align-items: center;
}

.title-text {
    letter-spacing: 1px;
    line-height: 200%;
    font-size: 55rpx;
}

.mainbody {
    margin-top: 30rpx;
    padding: 20px;
    margin-right: 20rpx;
    margin-left: 20rpx;
    background-color: #ffffff;
    border-radius: 15px;
    box-shadow: 0px 0px 20px -10px #888;
}

.mainbody-image {
    max-width: 100%;
    max-height: 100%;
    display: block;
    margin: auto;
}

.mainbody-text {
    letter-spacing: 1px;
    line-height: 200%;
    color: rgb(88, 88, 88);
    text-align: left;
}


.details {
    padding: 10rpx;
    background-color: #ffffff;
    box-shadow: 0px 0px 20px -10px #888;
    margin-top: 30rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
    border-radius: 15px;
    display: flex;
    align-items: center;
}

.details-image {
    width: 60rpx;
    height: 60rpx;
}

.details-text {
    margin-left: 30rpx;
    color: rgb(65, 64, 64);
}

.container {
    width: 100%;
    margin-top: 10px;
    text-align: center;
}

.swiper_container {
    margin: auto;
    margin-left: 10rpx;
    margin-right: 10rpx;
    height: 450rpx;
}

.swiper_container_image {
    width: 100%;
    height: 100%;
}

.swiper_container_text {
    font-size: 25rpx;
    margin: auto;
    color: rgb(155, 155, 155);
}

.bottom {
    margin-top: 30rpx;
    width: 100%;
    height: 80px;
    display: flex;
    justify-content: space-around;
}

.bottom_button {
    background-color: white;
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
    box-shadow: 0px 0px 20px -10px #888;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bottom_button .star_blue {
    color: #3863BC;
    transition: all .5s;
    animation: animation2 1500ms linear both;
}

.bottom_button .star_red {
    color: rgb(252, 63, 63);
    transition: all .5s;
    animation: animation1 1500ms linear both;
}