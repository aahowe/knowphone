/* pages/search/search.wxss */

.title-nearlySearch {
    font-size: 14px;
    text-align: left;
    color: #343434;
    line-height: 14px;
    display: flex;
    padding-top: 30rpx;
    justify-content: space-between;
}

.title-clear-nearlySearch {
    width: 28rpx;
    height: 28rpx;
}

.list-nearlySearch {
    display: flex;
    flex-wrap: wrap;
    padding-top: 28rpx;
}

.list-nearlySearch text,
.list-nearlySearch view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 100%;
    margin-bottom: 25rpx;
    padding: 24rpx;
    margin-right: 26rpx;
    font-size: 24rpx;
    color: #343434;
    background: #edf3fc;
    border-radius: 17px;
    box-shadow: 0px 0px 20px -10px #888;
}

.nearly-search {
    background-color: white;
    padding-left: 28rpx;
    padding-right: 28rpx;
    padding-bottom: 28rpx;
}

.selector {
    width: 130rpx;
    border-radius: 10px;
}

.list {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.kitem {
    background: linear-gradient(to right, #3b87c7, #6bbcf4);
    width: 660rpx;
    height: 100rpx;
    margin-top: 10rpx;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.kitem text {
    color: white;
}

.empty {
    width: 500rpx;
    margin: auto;
    margin-bottom: 50rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    top: 50rpx;
}

.empty image {
    width: 300rpx;
    height: 300rpx;
}

.itemlist {
    background-color: white;
    padding-bottom: 50rpx;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    box-shadow: 0px 10px 20px -20px #888;
}

.cell {
    width: 700rpx;
    height: 100rpx;
    display: flex;
    border-radius: 40rpx;
    box-shadow: 0px 0px 2px -1px #888;
    margin-top: 15rpx;
    background: linear-gradient(to right, #3b87c7, #6bbcf4);
}

.socicon {
    position: relative;
    left: 30rpx;
    top: 10rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 5px;
}

.soc_name {
    position: relative;
    left: 60rpx;
    width: 530rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.soc_name text{
    font-size: 35rpx;
    margin-left: 10rpx;
    color: white;
}

.phoneitem{
    margin-top: 30rpx;
    background-color: white;
    display: flex;
    width: 650rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 15px;
    border:2px solid #3863BC;
}

.phoneitem image{
    margin: 10px;
    width: 120rpx;
    height: 159rpx;
}

.details{
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.details_name{
    margin-right: 10px;
    font-size: 40rpx;
}

.details_content{
    margin-right: 10px;
    font-size: 25rpx;
}

.loading{
    position: relative;
    left: 330rpx;
    top: 10rpx;
}