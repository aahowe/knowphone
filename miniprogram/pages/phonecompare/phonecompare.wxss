page {
    background-color: #f2f2f2;
}

.comparepage {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    overflow-x: hidden;
    padding-bottom: 40px;
}

.title {
    background-color: #edf3fc;
    width: 700rpx;
    height: 450rpx;
    display: flex;
    justify-content: space-around;
    margin: auto;
    margin-top: 20rpx;
    border-radius: 20px;
    box-shadow: 0px 0px 20px -10px #888;
}

.title_content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    width: 300rpx;
    border-radius: 15px;
    border: 2px solid #3863BC;
    background-color: white;
}

.title_content text {
    font-size: 40rpx;
    font-weight: 900;
    text-align: center;
    width: 290rpx;
    overflow-x: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.phone_img {
    width: 240rpx;
    height: 318rpx;
}

.details {
    background-color: white;
    width: 700rpx;
    border-radius: 20px;
    box-shadow: 0px 0px 20px -10px #888;
    margin: auto;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.head_text {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #3863BC;
    border-top-right-radius: 20px;
    border-top-left-radius: 20px;
    width: 100%;
    margin-bottom: 10rpx;
}

.head_text text {
    font-size: 35rpx;
    color: white;
}

.charts-box {
    width: 100%;
    height: 300rpx;
    padding: 20rpx;
}

.item {
    margin-bottom: 10rpx;
    width: 650rpx;
    min-height: 80rpx;
    background-color: #edf3fc;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    padding: 10rpx;
    display: flex;
    justify-content: space-around;
}

.item_child {
    width: 50%;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #3863BC;
}

.item_child text {
    font-size: 28rpx;
}

.details_title {
    margin: auto;
    width: 670rpx;
    background-color: rgb(223, 223, 223);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    display: flex;
    justify-content: center;
}

.details_title text {
    font-size: 32;
}
