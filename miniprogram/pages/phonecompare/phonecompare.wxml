        </view>
        <view class="details_title">
            <text>尺寸和重量</text>
        </view>
        <view class="item">
            <view class="item_child">
                <text>{{phonedata[0].size_weigth}}</text>
            </view>
            <view class="item_child">
                <text>{{phonedata[1].size_weigth}}</text>
