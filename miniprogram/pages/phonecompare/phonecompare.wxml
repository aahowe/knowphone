<view class="comparepage">
    <!-- 标题区域 -->
    <view class="title">
        <view class="title_content">
            <text>{{phonedata[0].name}}</text>
            <image class="phone_img" src="{{phonedata[0].img}}"></image>
        </view>
        <view class="title_content">
            <text>{{phonedata[1].name}}</text>
            <image class="phone_img" src="{{phonedata[1].img}}"></image>
        </view>
    </view>
    <!-- 雷达图 -->
    <view class="details">
        <view class="head_text">
            <text>综合对比</text>
        </view>
        <view class="charts-box">
            <qiun-wx-ucharts type="radar" loadingType="4" chartData="{{radarData}}" canvas2d="{{true}}" canvasId="zpTIaLIFVTwTssNjAQmbZDjDMmjavxhR" />
        </view>
    </view>
    <!-- 柱状图 -->
    <view class="details">
        <view class="head_text">
            <text>性能对比</text>
        </view>
        <view class="charts-box">
            <qiun-wx-ucharts type="column" loadingType="4" chartData="{{columnData}}" canvas2d="{{true}}" canvasId="WokoWCbAKEDWIcljMyTbzkHSyKdhLwFo" />
        </view>
    </view>
    <!-- 外观 -->
    <view class="details">
        <view class="head_text">
            <text>外观</text>
        </view>
        <view class="details_title">
            <text>屏幕尺寸</text>
        </view>
        <view class="item">
            <view class="item_child">
                <text>{{phonedata[0].size}}英寸</text>
            </view>
            <view class="item_child">
                <text>{{phonedata[1].size}}英寸</text>
            </view>
        </view>
        <view class="details_title">
            <text>分辨率</text>
        </view>
        <view class="item">
            <view class="item_child">
                <text>{{phonedata[0].resolution}}</text>
            </view>
            <view class="item_child">
                <text>{{phonedata[1].resolution}}</text>
            </view>
        </view>
        <view class="details_title">
            <text>刷新率</text>
        </view>
        <view class="item">
            <view class="item_child">
                <text>{{phonedata[0].refresh}}</text>
            </view>
            <view class="item_child">
                <text>{{phonedata[1].refresh}}</text>
            </view>
        </view>
        <view class="details_title">
            <text>屏幕特性</text>
        </view>
        <view class="item">
            <view class="item_child">
                <text>{{phonedata[0].screen}}</text>
            </view>
            <view class="item_child">
                <text>{{phonedata[1].screen}}</text>
