/* pages/knowledge_item/knowledge_item.wxss */
Page {
    background-color: #F2F2F2;
}

.listitem {
    position: relative;
    top: 50px;
    margin: auto;
    margin-left: 10rpx;
    margin-right: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.listtext {
    font-size: 15px;
}

.kitem {
    background: linear-gradient(to right, #3863bc, #6bbcf4);
    width: 660rpx;
    height: 100rpx;
    margin-top: 20rpx;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-left: 20rpx;
    padding-right: 20rpx;
    box-shadow: 0px 0px 20px -10px #888;
}

.kitem text {
    color: white;
}

.title {
    background-color: #ffffff;
    position: fixed;
    top: 0;
    width: 100%;
    border-width: 5px;
    border-left-style: solid;
    border-color: #3863bc;
    height: 90rpx;
    text-align: left;
    z-index: 99;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0px 0px 20px -10px #888;
}

.title-text {
    color: #3863bc;
    letter-spacing: 2px;
    font-size: 18px;
    text-align: left;
    margin: 20rpx;
}

.title-tag {
    background-color: #3863bc;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    text-align: center;
    margin-right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.title-tagtext {
    color: rgb(255, 255, 255);
    position: relative;
    top: 1px;
}

.loading{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}