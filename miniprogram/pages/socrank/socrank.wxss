/* pages/socrank/socrank.wxss */
page {
    background-color: #f2f2f2;
}

swiper {
    height: 100vh;
}

.top-wrap {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    background-color: #ffffff;
    z-index: 99;
    box-shadow: 0px 0px 20px -10px #888;
}

.cells {
    background: #f2f2f2;
    margin-top: 20rpx;
}

.cell {
    width: 720rpx;
    height: 100rpx;
    display: flex;
    border-radius: 40rpx;
    box-shadow: 0px 0px 2px -1px #888;
    margin: 15rpx;
    background-color: #ffffff;
}

.socicon {
    position: relative;
    left: 110rpx;
    top: 10rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 5px;
}

.soc_name {
    position: relative;
    left: 120rpx;
    width: 400rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.soc_score {
    width: 95rpx;
    background-color: #edf3fc;
    position: relative;
    left: 140rpx;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-style:solid;
    border-width:2px;
    border-color: #3863BC;
}

.soc_rank {
    position: relative;
    left: -582rpx;
    width: 90rpx;
    background-color: #3863BC;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 40rpx;
}